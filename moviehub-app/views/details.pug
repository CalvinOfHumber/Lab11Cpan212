extends layout

block content
  h1 #{movie.name}
  p Description: #{movie.description}
  p Year: #{movie.year}
  p Genres: #{movie.genres}
  p Rating: #{movie.rating}
  p Posted by: #{movie.createdBy}

  if currentUser === movie.createdBy
    a(href=`/movies/${movie._id}/edit`) Edit Movie
    form(action=`/movies/${movie._id}/delete`, method="POST", style="display:inline", onsubmit="return confirm('Are you sure you want to delete this movie?');")
      button(type="submit") Delete Movie

  br
  button(id="receiptBtn") Show Movie Receipt
  script(src="/script.js")
